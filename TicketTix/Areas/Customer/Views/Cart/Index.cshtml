@model TravelTix.Models.ViewModels.CartVM
<form method="post">
	<br />
	<div class="container">
		<div class="card">
			<div class="card-header bg-primary text-light ml-0">
				<div class="row">
					<div class="col-6  pt-2">
						<i class="fa fa-shopping-cart"></i> &nbsp;
						Shopping Cart
					</div>
					<div class="col-6 text-end">
						<a asp-area="Customer" asp-controller="Booking" asp-action="Index" class="btn btn-outline-warning btn-sm ">Continue Shopping</a>
					</div>
				</div>
			</div>

			<div class="card-body">
				@foreach(var item in Model.ListCart){
				<div class="row">
					<div class="d-none d-lg-block col-lg-1 text-center py-2">
						<img src="@item.ticket.ImageUrl" class="rounded" width="100%" />
					</div>
					<div class="col-12 col-lg-6 pt-md-3">
						<p><strong>@Html.Raw(item.ticket.Origin)</strong> To <strong>@Html.Raw(item.ticket.Destination)</strong></p>
						<p>Departure :<strong>@item.ticket.Departure.ToString("dd/MM/yyyy HH:mm")</strong></p>
						<p>Arrival :<strong>@item.ticket.Arrival.ToString("dd/MM/yyyy HH:mm")</strong></p>
					</div>
					<div class="col-12  col-lg-5 text-center row">
						<div class="col-4 text-md-right pt-4">
							<h6><strong>Rp. @item.ticket.price.ToString("N")
								 </strong></h6>
						</div>
						<div class="col-6 col-sm-4 col-lg-6 pt-2">
							<div class=" btn-group" role="group">
								
								@*<span class="badge bg-light pt-3"><h5>@item.person</h5></span>*@
								<div class="card bg-light" style="max-width:25px;" > 
									<h4 class="card-title pt-2">@item.person</h4>
								</div>
								
							</div>

						</div>
						<div class="col-2 col-sm-4 col-lg-2 text-right pt-2">
							<a asp-action="Remove" asp-route-cartId="@item.Id" class="btn btn-danger">
								<i class="bi bi-trash-fill"></i>
							</a>
						</div>
					</div>
				</div>
				<hr />
				}
				<div class="row">
					<div class="col-12 col-md-6 offset-md-6 col-lg-4 offset-lg-8 pr-4">
						<ul class="list-group">
							<li class="list-group-item d-flex justify-content-between bg-light">
								<span class="text-info"> Total</span>
								<strong class="text-info">Rp @Model.OrderHeader.GrandTotal.ToString("N")</strong>
							</li>
						</ul>
					</div>
				</div>

			</div>

			<div class="card-footer">
				<div class="card-footer row">
					<div class="col-sm-12 col-lg-4 col-md-6 offset-lg-8 offset-md-6 ">
						<a asp-action="Summary" class="btn btn-success form-control">Summary</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>