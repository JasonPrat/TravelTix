@model IEnumerable<Airline>
@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> Airline List</h2>
            </div>
       
    </div>
</div>
<div class="col-12">
<table class= "table table-hover"style="width:100%">
    <thead>
        <tr class= "table-info">
            <th scope="col">
                Airline Name
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr class="table-success">
                <td width="80%">
                    @obj.Name
                </td>

                <td>
                    <div class="w-60 btn-group " role="group">
                       <a asp-controller="Airline" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil"></i> Edit</a>
                       <a asp-controller="Airline" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"><i class="bi bi-trash"></i>
                             Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-9"></div>
        <div class="col-3 text-end">
            <a asp-controller="Airline" asp-action="Create" class="btn btn-outline-primary"> 
                Insert New Airline
                <i class="bi bi-plus"> </i>
                </a>
            
        </div>
       
    </div>
</div>

